<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.appsys.mapper.TypeCURDMapper">
	<!-- 查询所有的用户类型数据 -->
	<select id="queryType" resultType="Type">
		select * from type
	</select>
	<!-- 根据角色id来删除角色 -->
	<delete id="deleteType" parameterType="Integer">
		DELETE FROM `type` WHERE id =#{id}
	</delete>
	<!-- 根据角色id来修改角色 -->
	<update id="updateType">
		UPDATE `type` SET typeName=#{typeName} WHERE id=#{id}
	</update>
	<!-- 根据角色id来查询即将修改的角色 -->
	<select id="queryTypeById" resultType="Type">
		select * from type where id=#{id}
	</select>
	<!-- 添加一个角色类型 -->
	<insert id="addType" parameterType="string">
		INSERT INTO `TYPE` VALUE(NULL,#{typeName}) 
	</insert>
</mapper>
